{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "lib",
    "skipLibCheck": true,
    "sourceMap": false
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
